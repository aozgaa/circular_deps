{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror"
      }
    },
    {
      "name": "ipo-clang",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=lld"
      }
    },
    {
      "name": "ipo-gcc",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base"
    },
    {
      "name": "ipo-clang",
      "configurePreset": "ipo-clang"
    },
    {
      "name": "ipo-gcc",
      "configurePreset": "ipo-gcc"
    }
  ]
}
